@PostMapping("/login")
public String login(Student student, HttpServletResponse response) {
    Cookie studentCookie = new Cookie("student_id", student.getId());
    studentCookie.setMaxAge(365 * 24 * 60 * 60); // 1 year
    response.addCookie(studentCookie);
    return "dashboard";
}

